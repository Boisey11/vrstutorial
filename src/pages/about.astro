---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

const pageTitle = "About Me";

const identity = {
  firstName: "Daniel",
  country: "United States",
  occupation: "Software Developer",
  hobbies: ["coding", "reading", "gaming"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Node.js", "Express", "MongoDB"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style define:vars={{skillColor, fontWeight, textCase}}>
			h1 {
				color: purple;
				font-size: 4rem;
			}
			.skill {
				color: var(--skillColor);
				font-weight: var(--fontWeight);
				text-transform: var(--textCase);
			}
			<!-- This format creates a variable called --skillColor which is then defined in the frontmatter -->
		</style>
	</head>
	<body>
        <Header />

		<h1>{pageTitle}</h1>
		<h2>Second page of my new astro site!</h2>
        <section>
            <p>This is a little something about me</p>
            <p>Welcome to my Astro site! I am a passionate developer who loves building amazing web applications.</p>

			<p>Here are a few little facts about me: </p>
			<ul>
				<li>My name is {identity.firstName}.</li>
				<li>I live in the {identity.country} and I work as a {identity.occupation}.</li>
				<!-- This format is a conditional statement meaning if the hobbies length is greater than
				or equal to 2 then print statement -->
				{identity.hobbies.length >= 2 &&
				<li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
				}
			</ul>
			<p>My skills are: </p>
			<ul>
				<!-- This format is a function that creates a new array by calling a provided function, this
				creates a new array of list items for each skill in the skills array -->
				{skills.map((skill) => <li class="skill">{skill}</li>)}
			</ul>

			{happy && <p>I am happy to be learning Astro!</p>}
			<p>text</p>

			{finished && <p>I finished this tutorial!</p>}
			<!-- This format is an if else statement if the goal is 3 print the first statement
			else print the second statement -->
			{goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
        </section>
			
		<script>
			window.addEventListener('DOMContentLoaded', (event) => {
				const bodyHeight = document.body.clientHeight;
				const viewportHeight = window.innerHeight;
				const footer = document.getElementById('footer');

			if (bodyHeight > viewportHeight) {
				footer.classList.add('footer-flex');
        }
    });
		</script>

		<Footer />
		<script>
    		import "../scripts/menu.js";
  		</script>
	</body>
</html>
